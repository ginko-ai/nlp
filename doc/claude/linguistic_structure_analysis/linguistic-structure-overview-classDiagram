    +statementA: String
    +statementB: String
    +validateEquivalence()
}

class Generalization {
    +type: String
    +scope: String
    +validateScope()
}

class ModalOperator {
    +type: String
    +necessity: Boolean
    +possibility: Boolean
    +evaluateOperator()
}

class Deletion {
    +type: String
    +missingInfo: String
    +recoverInformation()
}

LinguisticStructure <|-- Distortion
LinguisticStructure <|-- Generalization
